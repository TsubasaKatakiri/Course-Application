@model CourseApplication.BLL.VMs.Order.OrderCreate

@{
    ViewData["Title"] = "Create new order";
}

<h1>Create New Order</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Order" asp-action="CreateNewOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId" value="@Model.UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CartId" value="@Model.CartId" class="form-control" />
                <span asp-validation-for="CartId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserDeliveryDataId" class="control-label"></label>
                <select asp-for="UserDeliveryDataId" class="form-control" asp-items="@(new SelectList(Model.UserDeliveryDataList, "DataId", 
                           "FullAddressString" ))">
                </select>
                <span asp-validation-for="UserDeliveryDataId" class="text-danger"></span>
            </div>
            <div class="input-group">
                <input type="submit" value="Create" class="btn btn-primary mr-2" />
                <a class="btn btn-danger" asp-controller="Cart" asp-action="GetCartById">Back</a>
            </div>
        </form>
    </div>
</div>