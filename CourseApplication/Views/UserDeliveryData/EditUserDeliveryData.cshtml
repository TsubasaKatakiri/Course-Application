@model CourseApplication.BLL.VMs.UserDeliveryData.UserDeliveryDataInfo

@{
    ViewData["Title"] = "Edit delivery data";
}

<h1>Edit delivery data</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="UserDeliveryData" asp-action="EditUserDeliveryData" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" value=@Model.DataId asp-for="DataId" class="control-label" />
            </div>
            <div class="form-group">
                <input type="hidden" value=@Model.UserId asp-for="UserId" class="control-label" />
            </div>
            <div class="form-group">
                <label asp-for="PostalIndex" class="control-label"></label>
                <input asp-for="PostalIndex" value=@Model.PostalIndex class="form-control" />
                <span asp-validation-for="PostalIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" value=@Model.Country class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Region" class="control-label"></label>
                <input asp-for="Region" value=@Model.Region class="form-control" />
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" value=@Model.City class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" value=@Model.Street class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="House" class="control-label"></label>
                <input asp-for="House" value=@Model.House class="form-control" />
                <span asp-validation-for="House" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartments" class="control-label"></label>
                <input asp-for="Apartments" value=@Model.Apartments class="form-control" />
                <span asp-validation-for="Apartments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" value=@Model.FullName class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telephone" class="control-label"></label>
                <input asp-for="Telephone" value=@Model.Telephone class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button asp-controller="UserDeliveryData" asp-action="EditUserDeliveryData" type="submit" class="btn btn-primary">Apply changes</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-controller="UserDeliveryData" asp-action="GetAllUserDeliveryData">Back</a>
</div>