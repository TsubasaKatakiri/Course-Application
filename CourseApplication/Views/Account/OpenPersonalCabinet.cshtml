@{
    ViewBag.Title = "User personal cabinet";
}

<div class="container">
    <div class="row d-flex justify-content-between my-3">
        <h3>Personal cabinet</h3>
    </div>
    <div class="row">
        <div class="w-100">
            <div class="card mb-3 w-100">
                <div class="card-header">
                    <h4>@ViewBag.Username</h4>
                </div>
                <div class="card-body">
                    <h5>Account actions</h5>
                    <div class="my-1 py-3 border-bottom border-secondary">
                        <h6>Set delivery data</h6>
                        <a class="btn btn-primary" asp-controller="UserDeliveryData" asp-action="GetAllUserDeliveryData">Manage delivery data</a>
                    </div>
                    <div class="my-1 py-3 border-bottom border-secondary">
                        <h6>View order archive</h6>
                        <a class="btn btn-primary" asp-controller="Order" asp-action="GetAllUserOrders">View orders</a>
                    </div>
                    <div class="my-1 py-3">
                        <h6>Manage personal data</h6>
                        <a class="btn btn-primary" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@ViewBag.UserId">Change password</a>
                        <a class="btn btn-primary" asp-controller="Users" asp-action="EditUser" asp-route-id="@ViewBag.UserId">Edit account data</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>