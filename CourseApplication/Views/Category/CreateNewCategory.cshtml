@model CourseApplication.BLL.VMs.Category.CategoryCreate

@{
    ViewData["Title"] = "Create new category";
}

<h1>Create New Category</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Category" asp-action="CreateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-controller="Product" asp-action="GetAllProducts">Back</a>
</div>